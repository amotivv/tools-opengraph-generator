---
import Layout from '../layouts/Layout.astro';
---

<Layout title="OpenGraph Generator - Create Beautiful OpenGraph Images and Meta Tags">
  <section class="py-32">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <span class="text-primary font-medium mb-4 block text-sm tracking-wider uppercase">
          OpenGraph Generator
        </span>
        <h1 class="text-heading font-medium mb-6 text-secondary">
          Create Beautiful Social Media Cards in Seconds
        </h1>
        <p class="text-dark-gray/80 text-lg mb-8">
          Generate stunning OpenGraph images and meta tags for your website. 
          Optimize your social media presence with our easy-to-use tool.
        </p>
        <div class="flex gap-4 justify-center">
          <a href="/generator" class="btn-primary">Start Generating</a>
          <a href="/docs" class="btn-secondary">Learn More</a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-32 bg-white">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card">
          <h3 class="text-xl font-medium mb-4">Custom Templates</h3>
          <p class="text-dark-gray/80">
            Choose from a variety of professional templates or create your own custom design.
          </p>
        </div>
        <div class="card">
          <h3 class="text-xl font-medium mb-4">Meta Tag Generator</h3>
          <p class="text-dark-gray/80">
            Generate optimized meta tags for better social media sharing and SEO.
          </p>
        </div>
        <div class="card">
          <h3 class="text-xl font-medium mb-4">Multiple Formats</h3>
          <p class="text-dark-gray/80">
            Export your images in different sizes for Twitter, Facebook, and LinkedIn.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>